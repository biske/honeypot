<h1>Edit task</h1>

<%= form_for([current_user, @task], method: 'PUT', :html => { :class => 'form-signin'}) do |f| %>
	<% if @task.errors.any? %>
		<% @task.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	<% end %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :who %>
		<%= f.text_field :who %>
	</div>
	
	<div>
		<%= f.label :what %>
		<%= f.text_area :what, cols: 10, rows: 10 %>
	</div>
	
	<div>
		<%= f.label :where %>
		<%= f.text_field :where %>
	</div>

	<div>
		<%= f.label :when %>
		<%= f.text_field :when %>
	</div>
	
	<!-- <div>
		<%= f.label :duration %>
		<%= f.text_field :duration %>
	</div> -->
	<div>
		<%= f.label :days %>
		<%= f.text_field :days %>
		<%= f.label :hours %>
		<%= f.text_field :hours %>
		<%= f.label :minutes %>
		<%= f.text_field :minutes %>
	</div>
	
	<div>
		<%= f.label :how_much %>
		<%= f.text_field :how_much %>
	</div>
	
	<div>
		<%= f.label :contact %>
		<%= f.text_field :contact %>
	</div>
	
	<div>
		<%= f.submit "Update", class: "btn btn-large btn-primary" %>
	</div>
<% end %>