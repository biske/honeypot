<h2>Add task</h2>

<%= form_for([current_user, @task], :html => { :class => 'form-signin'}) do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, cols: 10, rows: 10 %>
	</div>
	
	<div>
		<%= f.label :where %>
		<%= f.text_field :where %>
	</div>

	<div>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div>
		<%= f.label :country %>
		<%= f.text_field :country %>
	</div>

	<div>
		<%= f.submit "Create task", class: "btn btn-large btn-primary" %>
	</div>
<% end %>
