<h2>Add task</h2>

<%= form_for([current_user, @task], :html => { multipart:true, :class => 'form-signin'}) do |f| %>
	<% if @task.errors.any? %>
		<% @task.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	<% end %>
	
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :who %>
		<%= f.text_field :who %>
	</div>
	
	<div>
		<%= f.label :what %>
		<%= f.text_area :what, cols: 10, rows: 10 %>
	</div>
	
	<div>
		<%= f.label :where %>
		<%= f.text_field :where %>
	</div>

	<div>
		<%= f.label :when %>
		<%= f.text_field :when %>
	</div>
	
	<!-- <div>
		<%= f.label :duration %>
		<%= f.text_field :duration %>
	</div> -->
	<div>
		<%= f.text_field :days, :size => 2 %> days, 
		<%= f.text_field :hours, :size => 2 %> hours,
		<%= f.text_field :minutes, :size => 2 %> minutes
	</div>
	
	
	<div>
		<%= f.label :how_much %>
		<%= f.text_field :how_much, placeholder: "How much money" %>
	</div>
	
	<div>
		<%= f.label :contact %>
		<%= f.text_field :contact, :size => 13 %>
	</div>
	
	<div>
		<%= f.file_field :image %>
	</div>

	<div>
		<%= f.submit "Create task", class: "btn btn-large btn-primary" %>
	</div>
<% end %>
