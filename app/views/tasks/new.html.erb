<h2>Add task</h2>

<%= form_for([current_user, @task], :html => { :class => 'form-signin'}) do |f| %>
	<% if @task.errors.any? %>
		<% @task.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	<% end %>
	
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :what %>
		<%= f.text_area :what, cols: 10, rows: 10 %>
	</div>
	
	<div>
		<%= f.label :who %>
		<%= f.text_field :who %>
	</div>
	
	<div>
		<%= f.label :where %>
		<%= f.text_field :where %>
	</div>

	<div>
		<%= f.submit "Create task", class: "btn btn-large btn-primary" %>
	</div>
<% end %>
