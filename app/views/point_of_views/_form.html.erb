<%= form_for([current_user, @point_of_view], html: { class: 'form-signin' }) do |f| %>
  <% if @point_of_view.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@point_of_view.errors.count, "error") %> prohibited this point_of_view from being saved:</h2>

      <ul>
      <% @point_of_view.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div>
		<%= f.label :what %>
		<%= f.text_area :what, cols: 10, rows: 10, placeholder: 'Description for point of view' %>
	</div>
  
  <div>
		<%= f.label :where %>
		<%= f.text_field :where, placeholder: 'Address or city or any object' %>
	</div>
  
	<div id="spiners">
		<label>Duration:</label>
		<%= f.text_field :days, class: "input-small", placeholder: 'days' %> days<br/> 
		<%= f.text_field :hours, class: "input-small", placeholder: 'hours' %> hours<br/>
		<%= f.text_field :minutes, class: "input-small", placeholder: 'minutes' %> minutes
	</div>

	<div>
		<%= f.label :how_much %>
		<%= f.text_field :how_much, placeholder: "How much money" %>
	</div>
	
	<div>
		<%= f.label :contact %>
		<%= f.text_field :contact, placeholder: 'Social network or email' %>
	</div>

  <div class="actions">
    <%= f.submit class: 'btn btn-large btn-primary'%>
  </div>
<% end %>
