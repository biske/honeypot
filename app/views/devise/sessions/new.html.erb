<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class =>  'form-signin' }) do |f| %>
<%= devise_error_messages! %>

<div class="center"><%= link_to "Sing in with Facebook", user_omniauth_authorize_path(:facebook), :id => "facebook-sign-up", :class => "btn btn-large btn-primary" %>
</div>
<br />
<div class="center">or</div>

<h2>Regular sign in</h2>
<div>
	<%= f.label :email %>
	<%= f.email_field :email, :autofocus => true %>
</div>

<div>
	<%= f.label :password %>
	<%= f.password_field :password %>
</div>

<% if devise_mapping.rememberable? -%>
<div>
	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
</div>
<% end -%>

<div>
	<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
</div>
<%= render "devise/shared/links" %>
<% end %>

